{
  "$schema": "https://biomejs.dev/schemas/1.7.3/schema.json",
  "files": {
    "ignoreUnknown": true,
    "ignore": ["node_modules", ".turbo", "dist"]
  },
  "organizeImports": {
    "enabled": false
  },
  "formatter": {
    "enabled": true,
    "include": ["./packages/**"],
    "indentStyle": "space"
  },
  "linter": {
    "enabled": true,
    "include": ["./packages/**"]
  }
}
